pipeline {
  agent any
  tools {
    maven 'maven-3.8'
    jdk 'adoptopenjdk-jdk8'
  }
  parameters {
    string(defaultValue: "main", description: 'Set git branch', name: 'BRANCH')
  }
  stages {
    stage('Preparation') {
      steps {
        deleteDir()
        git url: 'git@github.com:deegree/deegree-ogcapi.git', credentialsId: 'deegree-ci', branch: '${BRANCH}'
        sh 'mvn --version'
        sh 'java -version'
        sh 'mkdir ./mvn_local_repo'
      }
    }
    stage('Build-jdk8') {
      steps {
        sh 'mvn -Djava.awt.headless=true -fae -U -s settings.xml clean install'
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
        success {
          archiveArtifacts artifacts: 'deegree-ogcapi-webapp/**/*.war'
        }
      }
    }
    stage('Build-jdk11') {
      tools {
        jdk 'adoptopenjdk-jdk11'
      }
      steps {
        sh 'mvn -Djava.awt.headless=true -fae -U -s settings.xml clean install'
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
        success {
          archiveArtifacts artifacts: 'deegree-ogcapi-webapp/**/*.war'
        }
      }
    }
    stage('Deploy') {
      steps {
        sh 'mvn deploy -Dskip.unit.tests=true -pl :deegree-ogcapi-webapp-postgres,:deegree-ogcapi-webapp-oracle'
      }
    }
  }
}
