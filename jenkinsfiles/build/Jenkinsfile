pipeline {
  agent any
  tools {
    maven 'maven-3.8'
    jdk 'adoptopenjdk-jdk11'
    git 'git-default'
  }
  stages {
    stage('Preparation') {
      steps {
        sh 'mvn --version'
        sh 'java -version'
        sh 'mkdir -p ./mvn_local_repo'
      }
    }
    stage('Build-jdk11') {
      steps {
        sh 'mvn -Djava.awt.headless=true -fae -U -s ${WORKSPACE}/settings.xml clean install'
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
        success {
          archiveArtifacts artifacts: 'deegree-ogcapi-webapp/**/*.war'
        }
      }
    }
    stage('Deploy') {
        when {
            branch 'main'
        }
      steps {
        withCredentials([usernamePassword(credentialsId: 'nexus-deploy', passwordVariable: 'PASSWORD_VAR', usernameVariable: 'USERNAME_VAR')]) {
            sh 'mvn deploy -Dskip.unit.tests=true -s ${WORKSPACE}/settings.xml -Drepo.username=${USERNAME_VAR} -Drepo.password=${PASSWORD_VAR} -pl :deegree-ogcapi-webapp-postgres,:deegree-ogcapi-webapp-oracle,:deegree-ogcapi-documentation,:deegree-ogcapi-schema'
        }
      }
    }
  }
}
